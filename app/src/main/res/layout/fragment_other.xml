<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none"
    android:paddingBottom="@dimen/dp_33"
    tools:context=".ui.fragment.setting.RouteFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/other_rl_switch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_122"
            android:layout_marginLeft="@dimen/dp_24">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_24"
                android:text="通话时收听语音播报"
                android:textColor="#11131A"
                android:textSize="@dimen/sp_28" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_68"
                android:text="通话期间，实时收听导航播报"
                android:textColor="#505773"
                android:textSize="@dimen/sp_22"/>

            <ImageView
                android:id="@+id/other_img_switch"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_50"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_36"
                android:layout_marginRight="@dimen/dp_23"
                android:src="@mipmap/ic_switch_close_white" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_alignParentBottom="true"
                android:background="#E9EAF0" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/other_rl_music"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_171"
            android:layout_below="@id/other_rl_switch"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_28"
                android:text="语音播报时音乐播放控制"
                android:textColor="#11131A"
                android:textSize="@dimen/sp_28" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:layout_marginTop="@dimen/dp_88"
                android:background="@drawable/more_popup_broadcast_bg">

                <TextView
                    android:id="@+id/other_tv_reduce"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/not_downloaded_city_bg"
                    android:gravity="center"
                    android:text="降低音乐"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_24" />

                <TextView
                    android:id="@+id/other_tv_suspend"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/more_popup_broadcast_bg"
                    android:gravity="center"
                    android:text="暂停音乐"
                    android:textColor="#11131A"
                    android:textSize="@dimen/sp_24" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_alignParentBottom="true"
                android:background="#E9EAF0" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/other_rl_clear"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_171"
            android:layout_below="@id/other_rl_music"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_28"
                android:text="清除缓存"
                android:textColor="#11131A"
                android:textSize="@dimen/sp_28"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:layout_marginTop="@dimen/dp_88"
                android:background="@drawable/more_popup_broadcast_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="清除缓存"
                    android:textColor="#11131A"
                    android:textSize="@dimen/sp_24"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/other_tv_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="111k"
                    android:textSize="@dimen/dp_24"
                    android:textColor="#505773"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_36"/>

                <ImageView
                    android:layout_width="@dimen/dp_44"
                    android:layout_height="@dimen/dp_44"
                    android:src="@mipmap/ic_jump_white"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="2dp"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_alignParentBottom="true"
                android:background="#E9EAF0"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/other_rl_about"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_171"
            android:layout_below="@id/other_rl_clear"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_24"
                android:text="关于"
                android:textColor="#11131A"
                android:textSize="@dimen/sp_28"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:layout_marginTop="@dimen/dp_84"
                android:background="@drawable/more_popup_broadcast_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="百度地图"
                    android:textColor="#11131A"
                    android:textSize="@dimen/sp_24"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:layout_width="@dimen/dp_44"
                    android:layout_height="@dimen/dp_44"
                    android:src="@mipmap/ic_jump_white"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="2dp"/>

            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/other_tv_login_out"
            android:layout_width="@dimen/dp_404"
            android:layout_height="@dimen/dp_114"
            android:text="退出登录"
            android:textSize="@dimen/sp_28"
            android:textColor="@color/white"
            android:background="@mipmap/btn_danger"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_below="@id/other_rl_about"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginBottom="@dimen/dp_34"/>

    </RelativeLayout>

</ScrollView>