<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="85dp">
    <LinearLayout
            android:id="@+id/cruise_bg"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="32.8dp"
            android:layout_marginStart="32.8dp"
            android:layout_width="wrap_content"
            android:minWidth="210dp"
            android:paddingLeft="51dp"
            android:paddingStart="51dp"
            android:paddingRight="12dp"
            android:visibility="gone"
            android:paddingEnd="10dp"
            android:gravity="center_vertical"
            android:layout_height="54dp">
        <TextView
                android:id="@+id/cruise_txt"
                android:layout_width="wrap_content"
                android:lines="1"
                android:layout_marginBottom="8dp"
                android:textSize="13dp"
                android:textColor="#333333"
                android:layout_height="wrap_content"/>
        <ProgressBar
                android:id="@+id/progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressDrawable="@drawable/shape_progress_cruiser"
                android:layout_width="match_parent"
                android:layout_height="4dp"/>
    </LinearLayout>
    <RelativeLayout
            android:id="@+id/speed_layout"
            android:layout_width="85dp"
            android:background="@drawable/auto_cruise_speed"
            android:layout_height="85dp">
        <TextView
                android:id="@+id/speed"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="32dp"
                android:lines="1"
                android:layout_marginTop="18dp"
                android:textColor="#D4403F"
                android:text="0"
                android:gravity="bottom"
                android:includeFontPadding="false"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_centerHorizontal="true"
                android:textColor="#D4403F"
                android:textSize="11dp"
                android:text="km/h"
                android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>