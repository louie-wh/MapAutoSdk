<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.RoutePreferenceFragment">

    <RelativeLayout
        android:layout_width="@dimen/dp_608"
        android:layout_height="match_parent"
        android:background="@drawable/more_bg"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_24"
        android:layout_marginLeft="@dimen/dp_40">

        <ImageView
            android:id="@+id/route_preference_img_back"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            android:src="@mipmap/ic_back_white"
            android:layout_marginTop="@dimen/dp_34"
            android:layout_marginLeft="@dimen/dp_12"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改默认偏好"
            android:textSize="@dimen/sp_32"
            android:textColor="#11131A"
            android:layout_marginTop="@dimen/dp_36"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:layout_marginLeft="@dimen/dp_48"
            android:layout_marginRight="@dimen/dp_48"
            android:layout_below="@id/route_preference_img_back"
            android:layout_marginTop="@dimen/dp_38">

            <RelativeLayout
                android:id="@+id/route_preference_ll_one"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/route_preference_default_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/route_preference_img_tj"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:src="@mipmap/ic_route_preference_select"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/route_preference_tv_tj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_14"
                        android:text="智能推荐"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_28" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/route_preference_rl_one"
                    android:layout_width="@dimen/dp_58"
                    android:layout_height="@dimen/dp_34"
                    android:background="@mipmap/ic_bg_default_white"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="默认"
                        android:textSize="@dimen/sp_20"
                        android:textColor="#3366FF"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/route_preference_ll_two"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/more_popup_broadcast_bg"
                android:layout_marginLeft="@dimen/dp_24">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/route_preference_img_yd"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:src="@mipmap/ic_route_preference_unselected"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/route_preference_tv_yd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_14"
                        android:text="躲避拥堵"
                        android:textColor="#11131A"
                        android:textSize="@dimen/sp_28" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/route_preference_rl_two"
                    android:layout_width="@dimen/dp_58"
                    android:layout_height="@dimen/dp_34"
                    android:background="@mipmap/ic_bg_default_white"
                    android:layout_alignParentRight="true"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="默认"
                        android:textSize="@dimen/sp_20"
                        android:textColor="#3366FF"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:layout_marginLeft="@dimen/dp_48"
            android:layout_marginRight="@dimen/dp_48"
            android:layout_below="@id/route_preference_img_back"
            android:layout_marginTop="@dimen/dp_162">

            <RelativeLayout
                android:id="@+id/route_preference_ll_three"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/more_popup_broadcast_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/route_preference_img_sf"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:src="@mipmap/ic_route_preference_unselected"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/route_preference_tv_sf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="少收费\u3000"
                        android:textSize="@dimen/sp_28"
                        android:textColor="#11131A"
                        android:layout_marginLeft="@dimen/dp_14"/>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/route_preference_rl_three"
                    android:layout_width="@dimen/dp_58"
                    android:layout_height="@dimen/dp_34"
                    android:background="@mipmap/ic_bg_default_white"
                    android:layout_alignParentRight="true"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="默认"
                        android:textSize="@dimen/sp_20"
                        android:textColor="#3366FF"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/route_preference_ll_four"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/more_popup_broadcast_bg"
                android:layout_marginLeft="@dimen/dp_24">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/route_preference_img_gs"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:src="@mipmap/ic_route_preference_unselected"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/route_preference_tv_gs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="不走高速"
                        android:textSize="@dimen/sp_28"
                        android:textColor="#11131A"
                        android:layout_marginLeft="@dimen/dp_14"/>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/route_preference_rl_four"
                    android:layout_width="@dimen/dp_58"
                    android:layout_height="@dimen/dp_34"
                    android:background="@mipmap/ic_bg_default_white"
                    android:layout_alignParentRight="true"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="默认"
                        android:textSize="@dimen/sp_20"
                        android:textColor="#3366FF"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_100"
            android:layout_marginLeft="@dimen/dp_48"
            android:layout_marginRight="@dimen/dp_48"
            android:layout_below="@id/route_preference_img_back"
            android:layout_marginTop="@dimen/dp_286">

            <RelativeLayout
                android:id="@+id/route_preference_ll_five"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/more_popup_broadcast_bg">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/route_preference_img_time"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:src="@mipmap/ic_route_preference_unselected"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/route_preference_tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="时间优先"
                        android:textSize="@dimen/sp_28"
                        android:textColor="#11131A"
                        android:layout_marginLeft="@dimen/dp_14"/>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/route_preference_rl_five"
                    android:layout_width="@dimen/dp_58"
                    android:layout_height="@dimen/dp_34"
                    android:background="@mipmap/ic_bg_default_white"
                    android:layout_alignParentRight="true"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="默认"
                        android:textSize="@dimen/sp_20"
                        android:textColor="#3366FF"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/route_preference_ll_six"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/more_popup_broadcast_bg"
                android:layout_marginLeft="@dimen/dp_24">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/route_preference_img_gsyx"
                        android:layout_width="@dimen/dp_30"
                        android:layout_height="@dimen/dp_30"
                        android:src="@mipmap/ic_route_preference_unselected"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/route_preference_tv_gsyx"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="高速优先"
                        android:textSize="@dimen/sp_28"
                        android:textColor="#11131A"
                        android:layout_marginLeft="@dimen/dp_14"/>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/route_preference_rl_six"
                    android:layout_width="@dimen/dp_58"
                    android:layout_height="@dimen/dp_34"
                    android:background="@mipmap/ic_bg_default_white"
                    android:layout_alignParentRight="true"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="默认"
                        android:textSize="@dimen/sp_20"
                        android:textColor="#3366FF"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/route_preference_tv_modify_default"
            android:layout_width="@dimen/dp_350"
            android:layout_height="@dimen/dp_76"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/dp_24"
            android:background="@drawable/modify_default_bg"
            android:gravity="center"
            android:text="修改默认"
            android:textColor="#11131A"
            android:textSize="@dimen/sp_36" />

    </RelativeLayout>

</RelativeLayout>