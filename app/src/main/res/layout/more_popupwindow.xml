<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="@dimen/dp_762"
        android:layout_height="match_parent"
        android:background="@drawable/more_bg"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_24">

        <ImageView
            android:id="@+id/more_popup_img_back"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_34"
            android:src="@mipmap/ic_back_white" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22:22"
            android:textSize="@dimen/sp_56"
            android:textColor="#11131A"
            android:layout_marginTop="@dimen/dp_90"
            android:layout_marginLeft="@dimen/dp_40"/>

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="06月06日    周一"
            android:textSize="@dimen/sp_28"
            android:textColor="#11131A"
            android:layout_marginTop="@dimen/dp_112"
            android:layout_marginLeft="@dimen/dp_214"/>

        <TextView
            android:id="@+id/tv_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="27℃  多云"
            android:textSize="@dimen/sp_24"
            android:textColor="#11131A"
            android:layout_marginTop="@dimen/dp_166"
            android:layout_marginLeft="@dimen/dp_40"/>

        <TextView
            android:id="@+id/tv_air"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="空气优"
            android:textSize="@dimen/sp_24"
            android:textColor="#11131A"
            android:layout_marginTop="@dimen/dp_166"
            android:layout_marginLeft="@dimen/dp_158"/>

        <TextView
            android:id="@+id/tv_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="不宜洗车"
            android:textSize="@dimen/sp_24"
            android:textColor="#11131A"
            android:layout_marginTop="@dimen/dp_166"
            android:layout_marginLeft="@dimen/dp_245"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_11"
            android:background="#F5F7FA"
            android:layout_marginTop="@dimen/dp_214"/>

        <TextView
            android:id="@+id/tv_navigation_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="导航音量"
            android:textSize="@dimen/sp_20"
            android:textColor="#505773"
            android:layout_marginTop="@dimen/dp_261"
            android:layout_marginLeft="@dimen/dp_40"/>

        <ImageView
            android:id="@+id/img_volume"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            android:src="@mipmap/ic_low_volume_n_white"
            android:layout_marginTop="@dimen/dp_307"
            android:layout_marginLeft="@dimen/dp_40"/>

        <ImageView
            android:id="@+id/img_volume_reduce"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            android:layout_marginLeft="@dimen/dp_112"
            android:layout_marginTop="@dimen/dp_307"
            android:src="@mipmap/ic_decrease_n_white" />

        <ProgressBar
            android:id="@+id/pb_volume"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="@dimen/dp_490"
            android:layout_height="@dimen/dp_56"
            android:layout_marginLeft="@dimen/dp_172"
            android:layout_marginTop="@dimen/dp_301"
            android:max="100"
            android:progressDrawable="@drawable/more_progressbar_bg" />

        <ImageView
            android:id="@+id/img_volume_add"
            android:layout_width="@dimen/dp_44"
            android:layout_height="@dimen/dp_44"
            android:src="@mipmap/ic_increase_n_white"
            android:layout_marginTop="@dimen/dp_307"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_40"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="播报内容"
            android:textSize="@dimen/sp_20"
            android:textColor="#505773"
            android:layout_marginTop="@dimen/dp_417"
            android:layout_marginLeft="@dimen/dp_40"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="路况信息"
            android:textSize="@dimen/sp_20"
            android:textColor="#505773"
            android:layout_marginTop="@dimen/dp_417"
            android:layout_marginLeft="@dimen/dp_381"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GPS信号"
            android:textSize="@dimen/sp_20"
            android:textColor="#505773"
            android:layout_marginTop="@dimen/dp_417"
            android:layout_marginLeft="@dimen/dp_562"/>

        <LinearLayout
            android:layout_width="@dimen/dp_320"
            android:layout_height="@dimen/dp_128"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_462"
            android:layout_marginLeft="@dimen/dp_40"
            android:background="@drawable/more_popup_broadcast_bg">

            <RelativeLayout
                android:id="@+id/rl_standard_broadcast"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/more_popup_broadcast_bg_blue">

                <TextView
                    android:id="@+id/tv_standard_broadcast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="标准播报"
                    android:textSize="@dimen/sp_22"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/dp_25"
                    android:layout_centerHorizontal="true"/>

                <ImageView
                    android:id="@+id/img_standard_broadcast"
                    android:layout_width="@dimen/dp_44"
                    android:layout_height="@dimen/dp_44"
                    android:src="@mipmap/ic_standard_s_white"
                    android:layout_marginTop="@dimen/dp_59"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_concise_broadcast"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_concise_broadcast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="简洁播报"
                    android:textSize="@dimen/sp_22"
                    android:textColor="#11131A "
                    android:layout_marginTop="@dimen/dp_25"
                    android:layout_centerHorizontal="true"/>

                <ImageView
                    android:id="@+id/img_concise_broadcast"
                    android:layout_width="@dimen/dp_44"
                    android:layout_height="@dimen/dp_44"
                    android:src="@mipmap/ic_concise_n_white"
                    android:layout_marginTop="@dimen/dp_59"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_traffic"
            android:layout_width="@dimen/dp_160"
            android:layout_height="@dimen/dp_128"
            android:layout_marginLeft="@dimen/dp_381"
            android:layout_marginTop="@dimen/dp_462"
            android:background="@drawable/more_popup_broadcast_bg">

            <TextView
                android:id="@+id/tv_traffic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_25"
                android:text="路况关闭"
                android:textColor="#11131A "
                android:textSize="@dimen/sp_22" />

            <ImageView
                android:id="@+id/img_traffic"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_44"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_59"
                android:src="@mipmap/ic_traffic_n_white" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_gps"
            android:layout_width="@dimen/dp_160"
            android:layout_height="@dimen/dp_128"
            android:background="@drawable/more_popup_broadcast_bg"
            android:layout_marginTop="@dimen/dp_462"
            android:layout_marginLeft="@dimen/dp_562">

            <TextView
                android:id="@+id/tv_gps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卫星定位中"
                android:textSize="@dimen/sp_22"
                android:textColor="#11131A "
                android:layout_marginTop="@dimen/dp_25"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/img_gps"
                android:layout_width="@dimen/dp_44"
                android:layout_height="@dimen/dp_44"
                android:src="@mipmap/ic_gps_full_white"
                android:layout_marginTop="@dimen/dp_59"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_broadcast_brief_introduction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_606"
            android:text="标准播报：默认模式，适合多数人使用"
            android:textColor="#505773"
            android:textSize="@dimen/sp_20" />

    </RelativeLayout>

</LinearLayout>