<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/item_favorite_rl_go_poi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/item_favorite_img_go_here"
        android:layout_marginRight="@dimen/dp_67">

        <ImageView
            android:id="@+id/img_location_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_location_search_white"
            android:layout_marginTop="@dimen/dp_28"
            android:layout_marginLeft="@dimen/dp_40"/>

        <TextView
            android:id="@+id/item_favorite_list_tv_name"
            android:layout_width="@dimen/dp_508"
            android:layout_height="wrap_content"
            android:text="天安门"
            android:textSize="@dimen/sp_28"
            android:textColor="#11131A"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_88"
            android:maxLines="1"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/item_favorite_list_tv_addrs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_favorite_list_tv_name"
            android:layout_marginLeft="@dimen/dp_88"
            android:layout_marginTop="@dimen/dp_16"
            android:text="5A景区东城区-清华西路28号"
            android:textColor="#505773"
            android:textSize="@dimen/sp_24"
            android:maxLines="1"
            android:ellipsize="end"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/item_favorite_img_go_here"
        android:layout_width="@dimen/dp_52"
        android:layout_height="@dimen/dp_52"
        android:src="@mipmap/ic_go_here"
        android:layout_marginTop="@dimen/dp_37"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_47"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="到这去"
        android:textSize="@dimen/sp_22"
        android:textColor="#5C6473"
        android:layout_marginTop="@dimen/dp_99"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_16"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EBE9E0"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>